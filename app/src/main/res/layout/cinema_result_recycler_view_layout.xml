<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/complete_auto_text_view_left_right_padding_margin"
    android:paddingTop="30dp"
    android:paddingRight="@dimen/complete_auto_text_view_left_right_padding_margin"
    android:paddingBottom="30dp">

    <ImageView
        android:layout_marginRight="@dimen/complete_auto_text_view_left_right_padding_margin"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/point"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/cinema_result_recycler_view_layout_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="上海市虹口区水电路"/>

        <TextView
            android:id="@+id/cinema_result_recycler_view_layout_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end|bottom"
            android:text="352米"/>
    </LinearLayout>
</LinearLayout>