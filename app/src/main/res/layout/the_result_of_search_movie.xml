<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/complete_auto_text_view_top_bottom_padding_margin">

    <ImageView
        android:id="@+id/the_result_of_search_movie_image_view"
        android:layout_width="100dp"
        android:layout_height="130dp"
        android:layout_marginLeft="@dimen/complete_auto_text_view_left_right_padding_margin"
        android:layout_marginRight="@dimen/complete_auto_text_view_left_right_padding_margin"
        android:scaleType="centerCrop"
        android:src="@drawable/p2541662397"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:layout_toRightOf="@id/the_result_of_search_movie_image_view"
        android:orientation="vertical">

        <TextView
            android:id="@+id/the_result_of_search_movie_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:hint="流浪地球"/>

        <TextView
            android:id="@+id/the_result_of_search_movie_yanzhirenyuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="郭帆/屈楚萧/吴京/李光洁/吴孟达/赵今麦"
            android:textColor="@color/blue"
            android:textSize="14sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:orientation="vertical">

            <TextView
                android:id="@+id/the_result_of_search_movie_genres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="类型:"/>

            <TextView
                android:id="@+id/the_result_of_search_movie_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2019"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/the_result_of_search_movie_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7.9"
                    android:textColor="@color/yellow"/>

                <RatingBar
                    android:id="@+id/the_result_of_search_movie_rating"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:rating="4"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/the_result_of_search_movie_image_view"
        android:layout_marginTop="@dimen/complete_auto_text_view_top_bottom_padding_margin"
        android:background="@color/divider"/>
</RelativeLayout>