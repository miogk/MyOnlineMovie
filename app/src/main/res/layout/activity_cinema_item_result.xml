<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CinemaItemResultActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/cinema_item_result_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@color/pink"
        android:gravity="center_vertical"
        android:minHeight="?attr/actionBarSize"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:titleMarginStart="0dp">

        <ImageView
            android:id="@+id/cinema_item_result_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/complete_auto_text_view_left_right_padding_margin"
            android:src="@drawable/back"/>

        <TextView
            android:id="@+id/cinema_item_result_tool_bar_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/complete_auto_text_view_left_right_padding_margin"
            android:gravity="center"
            android:text="肯德基(曲阳店)"
            android:textColor="@color/black"
            android:textSize="@dimen/guide_text_size"/>
    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/cinema_item_result_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>
</LinearLayout>